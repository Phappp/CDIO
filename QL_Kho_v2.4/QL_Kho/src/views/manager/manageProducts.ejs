<%- include('../partials/manager/header') %>

    <div class="container">
        <h1>Quản lý sản phẩm</h1>

        <a href="/manager/products/create" class="btn btn-primary mb-3">Thêm sản phẩm</a>

        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Mã SP</th>
                    <th>Tên sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn vị</th>
                    <th>Giá</th>
                    <th>Người tạo</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach(product=> { %>
                    <tr>
                        <td>
                            <%= product.product_code %>
                        </td>
                        <td>
                            <%= product.name %>
                        </td>
                        <td>
                            <%= product.quantity %>
                        </td>
                        <td>
                            <%= product.unit %>
                        </td>
                        <td>
                            <%= product.price.toLocaleString() %> VNĐ
                        </td>
                        <td>
                            <%= product.created_by_name %>
                        </td>
                        <td>
                            <a href="/manager/products/<%= product.id %>/edit" class="btn btn-sm btn-info">Sửa</a>
                            <a href="/manager/products/<%= product.id %>/delete"
                                class="btn btn-sm btn-danger btn-delete">Xóa</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/admin/footer') %>