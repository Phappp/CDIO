<%- include('../partials/manager/header') %>

    <div class="container">
        <h1>Dashboard manager</h1>
        <p>Xin chào, <%= user.username %>
        </p>

        <div class="stats">
            <div class="stat-card active" id="total-products">
                <h3>Tổng sản phẩm</h3>
                <p>
                    <%= stats.totalProducts || 0 %>
                </p>
            </div>
            <div class="stat-card active" id="pending-reports">
                <h3>Báo cáo chờ duyệt</h3>
                <p style="color: red;">
                    <%= stats.pendingReports || 0 %>
                </p>
            </div>
            <div class="stat-card active" id="total-users">
                <h3>Người dùng</h3>
                <p>
                    <%= stats.totalUsers || 0 %>
                </p>
            </div>
        </div>

        <!-- Thêm phần thống kê mới nếu cần -->
        <div class="stats mt-4">
            <div class="stat-card">
                <h3>Sản phẩm sắp hết</h3>
                <p>
                    <%= stats.lowStockProducts || 0 %>
                </p>
            </div>
            <div class="stat-card">
                <h3>Báo cáo hôm nay</h3>
                <p>
                    <%= stats.todayReports || 0 %>
                </p>
            </div>
        </div>
    </div>

    <%- include('../partials/admin/footer') %>
        <script>
            function callURL() {
                const totalProducts = document.getElementById('total-products');
                const pendingReports = document.getElementById('pending-reports');
                const totalUsers = document.getElementById('total-users');

                pendingReports.onclick = function () {
                    window.location.href = '/manager/reports/pending';
                };

                totalProducts.onclick = function () {
                    window.location.href = '/manager/products';
                };

                totalUsers.onclick = function () {
                    window.location.href = '/manager/users';
                };
            }
            callURL();
        </script>