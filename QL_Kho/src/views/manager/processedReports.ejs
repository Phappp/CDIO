<%- include('../partials/manager/header') %>
    <link rel="stylesheet" href="/css/admin/processedReports.css">

    <div class="container-processedReports">
        <!-- Filter Cards -->
        <div class="reportList_header">
            <div class="itemRow all ">
                <div class="itemRow_content_bgr  "></div>
                <a href="/manager/reports/processed?status=all" class=" <%= currentFilter === 'all' ? 'bg-light' : '' %>">
                    <div class="itemRow_content">
                        <div class="itemRow_content_top">
                            Tất cả
                        </div>
                        <hr style="margin: 0;">
                        <div class="itemRow_content_bot" style="">
                            <%= Number(counts.approved_count) + Number(counts.rejected_count) %>
                        </div>
                    </div>
                </a>
            </div>

            <div class="itemRow approved">
                <div class="itemRow_content_bgr  "></div>
                <a href="/manager/reports/processed?status=approved"
                    class=" <%= currentFilter === 'approved' ? 'bg-light' : '' %>">
                    <div class="itemRow_content_top">
                        <div class="">
                            Chấp thuận
                        </div>
                        <hr style="margin: 0;">
                        <div class="itemRow_content_bot">
                            <%= counts.approved_count %>
                        </div>
                    </div>
                </a>
            </div>

            <div class="itemRow rejected">
                <div class="itemRow_content_bgr  "></div>
                <a href="/manager/reports/processed?status=rejected"
                    class=" <%= currentFilter === 'rejected' ? 'bg-light' : '' %>">
                    <div class="">
                        <div class="itemRow_content_top">
                            Từ chối
                        </div>
                        <hr style="margin: 0;">
                        <div class="itemRow_content_bot">
                            <%= counts.rejected_count %>
                        </div>
                    </div>
                </a>
            </div>
            <form class="" method="GET" action="/manager/reports/processed">
                <input type="hidden" name="status" value="<%= currentFilter %>">

                <label class="mr-2">Ngày:</label>
                <select class="form-control mr-3" name="day">
                    <option value="">Tất cả</option>
                    <% for (let i=1; i <=31; i++) { %>
                        <option value="<%= i %>" <%=Number(selectedDay)===i ? 'selected' : '' %>><%= i %>
                        </option>
                        <% } %>
                </select>

                <label class="mr-2">Tháng:</label>
                <select class="form-control mr-3" name="month">
                    <option value="">Tất cả</option>
                    <% for (let i=1; i <=12; i++) { %>
                        <option value="<%= i %>" <%=Number(selectedMonth)===i ? 'selected' : '' %>><%= i %>
                        </option>
                        <% } %>
                </select>

                <label class="mr-2">Năm:</label>
                <select class="form-control mr-3" name="year">
                    <option value="">Tất cả</option>
                    <% for (let y=2022; y <=new Date().getFullYear(); y++) { %>
                        <option value="<%= y %>" <%=Number(selectedYear)===y ? 'selected' : '' %>><%= y %>
                        </option>
                        <% } %>
                </select>

                <button type="submit" class="btn btn-primary">Lọc</button>
            </form>
        </div>

        <!-- Reports Table -->
        <div class="reportList_body">
            <div class="reportList_body_top">
                <div class="title">
                    <h2>Danh sách báo cáo đã xử lý</h2>
                </div>
                <div class="dropdown ">
                    <div class="dropdown-menu" aria-labelledby="exportDropdown">
                        <a class="dropdown-item excel "
                            href="/manager/reports/export/excel?status=<%= currentFilter %>&day=<%= selectedDay %>&month=<%= selectedMonth %>&year=<%= selectedYear %>">
                            <i class="fas fa-file-excel text-success mr-2 " style="color: #2E7D32;"></i>Excel
                        </a>
                        <a class="dropdown-item pdf"
                            href="/manager/reports/export/pdf?status=<%= currentFilter %>&day=<%= selectedDay %>&month=<%= selectedMonth %>&year=<%= selectedYear %>">
                            <i class="fas fa-file-pdf text-danger mr-2" style="color: #E53935;"></i>PDF
                        </a>

                    </div>
                </div>
            </div>
            <div class="reportList_body_bot">
                <div class="">
                    <table class="" id="dataTable" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th>Mã BC</th>
                                <th>Loại</th>
                                <th>Mã SP</th>
                                <th>Tên SP</th>
                                <th>SL</th>
                                <th>Giá trị</th>
                                <th>Trạng thái</th>
                                <th>Người tạo</th>
                                <th>Người xử lý</th>
                                <th>Ngày tạo</th>
                                <th>Ngày Xử lý</th>
                                <!-- <th>Thao tác</th> -->
                            </tr>
                        </thead>
                        <tbody>
                            <% reports.forEach(report=> { %>
                                <tr>
                                    <td>
                                        <%= report.id %>
                                    </td>
                                    <td>
                                        <%= report.type==='import' ? 'Nhập' : 'Xuất' %>
                                    </td>
                                    <td>
                                        <%= report.product_code %>
                                    </td>
                                    <td>
                                        <%= report.product_name %>
                                    </td>
                                    <td>
                                        <%= report.quantity %>
                                    </td>
                                    <td>
                                        <%= helpers.calculateValue(report.quantity, report.price) %> VNĐ
                                    </td>
                                    <td>
                                        <span class="badge badge-<%= 
                    report.status === 'approved' ? 'success' : 
                    report.status === 'rejected' ? 'danger' : 'warning'
                  %>">
                                            <%= report.status==='approved' ? 'Đã duyệt' : report.status==='rejected'
                                                ? 'Từ chối' : 'Chờ xử lý' %>
                                        </span>
                                    </td>
                                    <td>
                                        <%= report.creator_name %>
                                    </td>
                                    <td>
                                        <%= report.processor_name || 'N/A' %>
                                    </td>
                                    <td>
                                        <%= helpers.formatDate(report.created_at) %>
                                    </td>
                                    <td>
                                        <%= helpers.formatDate(report.updated_at) %>
                                    </td>
                                    <!-- <td>
                                        <% if (report.status==='pending' ) { %>
                                            <form action="/admin/reports/<%= report.id %>/process" method="POST"
                                                class="d-inline">
                                                <input type="hidden" name="action" value="approve">
                                                <button type="submit" class="btn btn-sm btn-success">Duyệt</button>
                                            </form>
                                            <form action="/admin/reports/<%= report.id %>/process" method="POST"
                                                class="d-inline ml-1">
                                                <input type="hidden" name="action" value="reject">
                                                <button type="submit" class="btn btn-sm btn-danger">Từ chối</button>
                                            </form>
                                            <% } else { %>
                                                <span class="text-muted">Đã xử lý</span>
                                                <% } %>
                                    </td> -->
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/darkmode/admin/processedReports.js"></script>

    <%- include('../partials/manager/footer') %>


        <!-- DataTables Script -->
        <script>
            $(document).ready(function () {
                $('#dataTable').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.10.20/i18n/Vietnamese.json'
                    },
                    order: [[0, 'desc']],
                    dom: '<"top"lf>rt<"bottom"ip><"clear">',
                    buttons: [
                        'excel', 'pdf'
                    ]
                });
            });
        </script>