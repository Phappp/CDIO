<%- include('../partials/admin/header') %>
    <link rel="stylesheet" href="/css/admin/personal.css">

    <div class="card">
        <% if (personal) { %>
            <div
                style="text-align: center; border-radius: 50%;width: 200px;height: 200px; display: flex;justify-content: center; align-items: center; box-shadow: 0px 2px 4px 6px #0000001a;">
                <% if (personal.avatar) { %>
                    <img src="<%= personal.avatar || '/images/default-product.png' %>" class="avatar">
                    <% } else { %>
                        <div class="avatar" style="background: #ddd; line-height: 100px;">No Image</div>
                        <% } %>
            </div>

            <div class="info">
                <p><strong>Full name:</strong>
                    <%= personal.full_name %>
                </p>
                <p><strong>Email:</strong>
                    <%= personal.email %>
                </p>
                <p><strong>Phone:</strong>
                    <%= personal.phone %>
                </p>
                <p><strong>Address:</strong>
                    <%= personal.address %>
                </p>
            </div>
            <% } else { %>
                <div class="alert">User information not found.</div>
                <% } %>
    </div>
    <script src="/js/darkmode/share/personal.js"></script>

    <%- include('../partials/admin/footer') %>