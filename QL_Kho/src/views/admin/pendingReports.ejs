<%- include('../partials/admin/header') %>
    <link rel="stylesheet" href="/css/darkmode/admin/pendingReports.css">
    <link rel="stylesheet" href="/css/admin/pendingReports.css">
    <h1 style="padding-top:120px; text-align: left; padding-left: 24px;">Báo cáo chờ duyệt</h1>
    <div class="container" >
        <% if (reports.length===0) { %>
            <div class="alert alert-info">Không có báo cáo nào chờ duyệt</div>
            <% } else { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mã BC</th>
                            <th>Loại</th>
                            <th>Sản phẩm</th>
                            <th>Số lượng</th>
                            <th>Giá trị</th>
                            <th>Người tạo</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% reports.forEach(report=> { %>
                            <tr>
                                <td>
                                    <%= report.id %>
                                </td>
                                <td>
                                    <%= report.type==='import' ? 'Nhập' : 'Xuất' %>
                                </td>
                                <td>
                                    <%= report.product_name %>
                                </td>
                                <td>
                                    <%= report.quantity %>
                                </td>
                                <td>
                                    <%= (report.quantity * report.price).toLocaleString() %> VNĐ
                                </td>
                                <td>
                                    <%= report.created_by_name %>
                                </td>
                                <td>
                                    <%= new Date(report.created_at).toLocaleString() %>
                                </td>
                                <td>
                                    <form method="POST" action="/admin/reports/<%= report.id %>/process" class="">
                                        <input type="hidden" name="action" value="approve">
                                        <button type="submit" class="btn btn-sm btn-success">Duyệt</button>
                                    </form>
                                    <form method="POST" action="/admin/reports/<%= report.id %>/process" class="">
                                        <input type="hidden" name="action" value="reject">
                                        <button type="submit" class="btn btn-sm btn-danger">Từ chối</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
    </div>

    <%- include('../partials/admin/footer') %>