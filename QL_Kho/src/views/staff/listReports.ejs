<%- include('../partials/staff/header') %>
<link rel="stylesheet" href="/css/staff/listReports.css">
    <div class="container">
        <h1>Danh sách báo cáo của tôi</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Mã BC</th>
                    <th>Loại</th>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Giá trị</th>
                    <th>Trạng thái</th>
                    <th>Ngày tạo</th>
                </tr>
            </thead>
            <tbody>
                <% reports.forEach(report=> { %>
                    <tr>
                        <td>
                            <%= report.id %>
                        </td>
                        <td>
                            <%= report.type==='import' ? 'Nhập' : 'Xuất' %>
                        </td>
                        <td>
                            <%= report.product_name %>
                        </td>
                        <td>
                            <%= report.quantity %>
                        </td>
                        <td>
                            <%= (report.quantity * report.price).toLocaleString() %> VNĐ
                        </td>
                        <td class="status-<%= report.status %>">
                            <%= report.status==='pending' ? 'Chờ duyệt' : report.status==='approved' ? 'Đã duyệt'
                                : 'Từ chối' %>
                        </td>
                        <td>
                            <%= new Date(report.created_at).toLocaleString() %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <%- include('../partials/admin/footer') %>